<%# <form > %>
<%= form_with(model: user, class: "row g-3") do |f| %>
  <div class="col-md-6">
    <%= f.label :first_name, class: "form-label" %>
    <%= f.text_field :first_name, class: "form-control", placeholder: "First name", autocomplete: "off" %>
  </div>
  <div class="col-md-6">
    <%= f.label :last_name, class: "form-label" %>
    <%= f.text_field :last_name, class: "form-control", placeholder: "Last name", autocomplete: "off" %>
  </div>
  <div class="col-md-6">
    <%= f.label :username, class: "form-label" %>
    <%= f.text_field :username, class: "form-control", placeholder: "User name", autocomplete: "off" %>
  </div>
  <div class="col-md-6">
    <%= f.label :email, class: "form-label" %>
    <%= f.text_field :email, class: "form-control", type: "email", placeholder: "Email", autocomplete: "off" %>
  </div>
  <div class="col-md-6">
    <%= f.label :password, "Password", class: "form-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="col-md-6">
    <%= f.label :confirm_password, "Password", class: "form-label" %>
    <%= f.password_field :confirm_password, class: "form-control" %>
  </div>

  <div class="form-group row justify-content-center mt-4">
      <div class="col-1">
        <%= f.submit( user.new_record? ? "Create user" : "Update the user", class: "btn btn-outline-primary") %>
      </div>
    </div>
<% end %>