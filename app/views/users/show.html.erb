<div class="container">
  <h2 class="text-center">Welcome to user</h2>
  <div class="col-sm mt-4">
    <div class="card text-center">
      <div class="card-header">
        <%= @user.username %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= @user.first_name + " " + @user.last_name %></h5>
        <p class="card-text"><%= @user.email %></p>
        <%= link_to "Edit this user", edit_user_path(@user) %>
      </div>
    </div>
  </div>

  <% if @user.posts.any? %>
    <h2 class="text-center mt-4">List of posts</h2>
    <table class="table">
    <thead class="table-success">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.description %></td>
          <td><%= link_to "Show post", post, class: "link" %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <h2 class="text-center mt-4">No post</h2>
  <% end %>
</div>