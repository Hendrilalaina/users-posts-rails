<h2 class="text-center">Edit a the post</h2>

<%# <%= form_with scope: :post, url: posts_path, local: true do |f| %>
<div class="container">
  <%= link_to "Back to posts", posts_path %>
  <div class="row">
    <% if @post.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <h3><%= @post.errors.count %> error(s) occured!</h3>
        <ul>
          <% @post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>   
    <% end %> 
  </div>

  <%= form_with(model: @post, class: "row") do |f| %>
    <div class="form-group row mb-4">
      <%= f.label :title, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :description, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row justify-content-center mt-4">
      <div class="col-1">
        <%= f.submit "Update", class: "btn btn-md btn-outline-success" %>
      </div>
    </div>
  <% end %>
</div>