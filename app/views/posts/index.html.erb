<div class="container-fluid">
  <p style="color: green"><%= notice %></p>
  <h2 class="text-center">List of posts</h2>
  
</div>
<div class="container shadow p-3 mt-4">
  <%= link_to "Create new post", new_post_path, class: "btn btn-outline-primary mb-4"%>
  <table class="table">
    <thead class="table-success">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.description %></td>
          <td><%= link_to "Show post", post, class: "link" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>